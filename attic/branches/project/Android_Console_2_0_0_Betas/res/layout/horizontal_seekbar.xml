<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/horizontal_seekbar_root_layout"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
	<TableRow
		android:layout_width="fill_parent"
		android:gravity = "center">
   		<ImageView
			android:id="@+id/horizontal_seekbar_minvalue_image"
	        android:adjustViewBounds="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"/>
	
		<org.openremote.android.console.view.seekbar.ORSeekBar
			android:id="@+id/horizontal_seekbar"
			android:max="100"
			android:progressDrawable="@drawable/progress_horizontal"
			android:thumb="@drawable/slider_thumb"
			android:layout_height="26dip"
			android:layout_width="fill_parent"
			android:layout_centerInParent="true"/>
							
		<ImageView
			android:id="@+id/horizontal_seekbar_maxvalue_image"
	        android:adjustViewBounds="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"/>
	</TableRow>
</TableLayout>
