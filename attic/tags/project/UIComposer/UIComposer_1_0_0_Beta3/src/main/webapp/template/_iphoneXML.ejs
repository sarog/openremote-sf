<?xml version="1.0" encoding="UTF-8"?>
<openremote> 
	<activity id="<%=activity.id %>" name="<%=activity.name %>">
  	<% for (var index in activity.screen) { %>
  	<% var screen = activity.screen[index]; %>
    <screen id="<%=screen.id %>" name="<%=screen.name %>" row="<%=screen.row %>" col="<%=screen.col %>">
      <buttons>
  		<% for (var index in screen.buttons) { %>
		<% var button = screen.buttons[index]; %>
		<% if (button.icon.match("http(s?)://") == null) { %>
		<% button.icon = getFileNameFromPath(button.icon) }%>
        <button id="<%=button.id %>" label="<%=button.label %>" x="<%=button.x %>" y="<%=button.y %>" width="<%=button.width %>" height="<%=button.height %>" <%= button.icon == ""?"":'icon="'+ button.icon + '"'  %>/>
		<% } %>
      </buttons>
    </screen>
	<% } %>
  </activity>
</openremote>