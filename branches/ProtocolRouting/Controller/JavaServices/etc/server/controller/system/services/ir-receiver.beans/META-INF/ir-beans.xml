<!--
 | Mock infrared receiver. This implementation assumes IR codes received via incoming socket.
 |
 | Author: Juha Lindfors
 | Revision: $Id: $
 +-->
<deployment xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation = "urn:jboss:bean-deployer:2.0 bean-deployer_2_0.xsd"
            xmlns = "urn:jboss:bean-deployer:2.0">


  <bean name  = "Input/Infrared/BenQ-VT3080"
        class = "org.openremote.controller.input.InfraredReceiver">


    <property name = "infraredCommandMap">

      <map class = "java.util.HashMap" keyClass = "java.lang.String" valueClass = "java.lang.String">

        <entry>

          <!--
           | Button '1' ==> X10 Device A1, ALL_LIGHTS_ON (1)
           +-->
          <key>20DF</key>

          <value>
            header
            {
              version = 1
              hop = 1
              uid = FF0001
              source = OpenRemote.Infrared:BenQ.VT3080
              class = Infrared.Command
              target = OpenRemote.GlobalAddress.1
            }

            X10 Command
            {
              address = A1
              command = 1
            }
          </value>

        </entry>

        <!--
         | Button '2' ==> INSTEON Command 0100 to
         +-->
        <entry>
          <key>A05F</key>

          <value>
            header
            {
              version = 1
              hop = 1
              uid = FF0001
              source = OpenRemote.Infrared:BenQ.VT3080
              class = Infrared.Command
              target = OpenRemote.INSTEON-Gateway.1
            }

            INSTEON Command
            {
              FromAddress = 001010
              ToAddress = 000001
              MessageFlags = Direct
              MessageType = Standard
              HopsLeft = 3
              MaxHops = 3
              Command = 0100
            }
          </value>
        </entry>
      </map>
    </property>

    
    <!--
     | Service dependencies.
     |
     | These explicit dependencies will order the deployments so that the IR receiver
     | is always deployed after the router and address table services have been initialized.
     +-->
    <depends>ControlProtocol/Router</depends>
    <depends>ControlProtocol/AddressTable</depends>



    <!-- ==========================================================================================
     |
     | Optional Configuration Properties.
     |
     | The properties below allow customization of the infrared receiver implementation.
     | They are not mandatory and in many cases the implementation defaults are sufficient.
     |
     | If you want to customize the infrared receiver, uncomment the relevant properties
     | below.
     |
     +========================================================================================= -->


    <!--
     | Determines the expected infrared command length in bytes.
     |
     | Defaults to 16 bit IR command (2 bytes).
     |
     |   <property name = "infraredCommandLength">2</property>
     |
     +-->
    
  </bean>


</deployment>