<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/vertical_seekbar_root_layout"
	android:layout_width="wrap_content" 
	android:layout_height="fill_parent">
	<TableRow
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:gravity = "center">
		<ImageView
			android:id="@+id/vertical_seekbar_minvalue_image"
	        android:adjustViewBounds="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"/>
	</TableRow>
	<TableRow
		android:layout_height="fill_parent"
		android:gravity = "center">
		<org.openremote.android.console.view.seekbar.vertical.VerticalSeekBar
			android:id="@+id/vertical_seekbar"
		    android:progressDrawable="@drawable/progress_vertical"
		    android:thumb="@drawable/seek_thumb"
		    android:layout_height="fill_parent" 
		    android:layout_width="26dip"/>
	</TableRow>
	<TableRow
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:gravity = "center">
		<ImageView
			android:id="@+id/vertical_seekbar_maxvalue_image"
	        android:adjustViewBounds="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"/>
	</TableRow>
</TableLayout>