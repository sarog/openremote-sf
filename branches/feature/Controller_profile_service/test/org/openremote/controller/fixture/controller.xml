<?xml version="1.0" encoding="UTF-8"?>
<openremote xmlns="http://www.openremote.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.openremote.org ../../../../../config/controller-2.0-M6.xsd ">
  <controls>
		<switch id="1">
			<on>
			    <include type="command" ref="100" />
			</on>
			<off>
			    <include type="command" ref="99" />
			</off>
			<status>
			    <include type="command" ref="98" />
			</status>
		</switch>
		<switch id="2">
			<on>
			    <include type="command" ref="100" />
			</on>
			<off>
			    <include type="command" ref="99" />
			</off>
			<status>
			    <include type="command" ref="98" />
			</status>
		</switch>
		<switch id="3">
			<on>
			    <include type="command" ref="100" />
			</on>
			<off>
			    <include type="command" ref="99" />
			</off>
			<status>
			    <include type="command" ref="98" />
			</status>
		</switch>
		<switch id="4">
			<on>
			    <include type="command" ref="100" />
			</on>
			<off>
			    <include type="command" ref="99" />
			</off>
			<status>
			    <include type="command" ref="98" />
			</status>
		</switch>
		<monitor id="5">
			<status>
				<include type="command" ref="10"/>
			</status>
		</monitor>
		<label id="6">
			<status>
				<include type="command" ref="10"/>
			</status>
		</label>
		<gesture id="7" >
			<include type="command" ref= "100"/>
			<include type="command" ref= "99"/>
		</gesture>
		<slider id="8">
			<exe>
			    <include type="command" ref="97" />
			</exe>
			<status>
			    <include type="command" ref="96" />
			</status>
		</slider>
		<button id="9">
			<delay>500</delay>
      		<include type="command" ref="99" />
    	</button>
    	<image id="990">
			<include type="sensor" ref="1009" />
		</image>
	</controls>
	
	<!-- sensors -->
	<sensors>
		<sensor id="1001" name="lampA power sensor" type="boolean">
	    	<include type="command" ref="98" />
	    	<state name="on"/>
	    	<state name="off"/>
		</sensor>
		<sensor id="1002" name="lampB power sensor" type="boolean">
	    	<include type="command" ref="98" />
	    	<state name="on"/>
	    	<state name="off"/>
		</sensor>
		<sensor id="1003" name="lampC power sensor" type="boolean">
	    	<include type="command" ref="98" />
	    	<state name="on"/>
	    	<state name="off"/>
		</sensor>
		<sensor id="1004" name="lampD power sensor" type="boolean">
	    	<include type="command" ref="98" />
	    	<state name="on"/>
	    	<state name="off"/>
		</sensor>
		<sensor id="1005" name="DV sensor" type="custom">
	    	<include type="command" ref="97" />
	    	<state name="imageURL" />
	    	<state name="text" />
		</sensor>
		<sensor id="1008" name="Air conditioner sensor" type="range">
	    	<include type="command" ref="97" />
	    	<min value="-20" />
	    	<max value="100" />
		</sensor>
		<sensor id="1009" name="Door power sensor" type="custom">
	    	<include type="command" ref="98" />
	    	<state name="open"/>
	    	<state name="close"/>
		</sensor>
	</sensors>
	
	<commands>
		<command id="100" protocol="test" value="ON" />
		<command id="99" protocol="test" value="OFF"/>
		<command id="10" protocol="test" value="OFF"/>
		<command id="98" protocol="test" value="STATUS"/>
		<command id="97" protocol="test" value="CHANGE"/>
		<command id="96" protocol="test" value="STATUS"/>
	</commands>
</openremote>
