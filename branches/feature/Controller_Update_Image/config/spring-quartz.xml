<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING/DTD BEAN/EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>    
    <!-- controllerXMLChangeListenJob -->
	<bean name="controllerXMLChangeListenJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass">
			<value>org.openremote.controller.config.ControllerXMLChangeListener</value>
		</property>
		<property name="jobDataAsMap">
			<map>
			  <entry key="controllerXMLChangeService" value-ref="controllerXMLChangeService" />
			  <entry key="controllerXMLListenSharingData" value-ref="controllerXMLListenSharingData" />
			</map>
		</property>             
	</bean>
        
    <bean id="controllerXMLChangeListenJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
       		<ref bean="controllerXMLChangeListenJob" />
		</property>
		<property name="cronExpression">
       		<value>*/15 * * * * ?</value>
		</property>
    </bean>
    
    <!-- imageContentChangeListenJob -->
	<bean name="imageContentChangeListenJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass">
			<value>org.openremote.controller.image.ImageContentChangeListener</value>
		</property>
		<property name="jobDataAsMap">
			<map>
			  <entry key="imageContentChangeService" value-ref="imageContentChangeService" />
			  <entry key="imageContentTimeStampData" value-ref="imageContentTimeStampData" />
			</map>
		</property>             
	</bean>
        
    <bean id="imageContentChangeListenJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
       		<ref bean="imageContentChangeListenJob" />
		</property>
		<property name="cronExpression">
       		<value>*/30 * * * * ?</value>
		</property>
    </bean>
	
	<bean id="quartzScheduler" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref local="controllerXMLChangeListenJobTrigger"/>
				<ref local="imageContentChangeListenJobTrigger"/>
			</list>
		</property>
	</bean>
</beans>
