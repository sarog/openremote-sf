<!--
 | Configuration of servlet controller component for user registration web interface.
 |
 | Author: Juha Lindfors
 | Revision: $Id: $
 +-->
<web-app xmlns = "http://java.sun.com/xml/ns/javaee"
         xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd"
         version = "2.5">

  <display-name>OpenRemote User Registration</display-name>


  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>org.openremote.manager.online.user.view.RegistrationControl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>


</web-app>

