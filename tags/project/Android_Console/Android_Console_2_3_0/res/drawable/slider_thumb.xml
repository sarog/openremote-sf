<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
	    <shape>	    	
	    	<solid android:color="#20000000" />
  	    	<corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp" android:topLeftRadius="12dp" android:topRightRadius="12dp" />
    	</shape>
	</item>
	
	<item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
		<shape>
		    <gradient
		        android:angle="90"
		        android:startColor="#d0d0d0"
		        android:endColor="#f9f9f9"
		        android:type="linear" />
		    
		    <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp" android:topLeftRadius="12dp" android:topRightRadius="12dp" />
		    
		    <stroke android:width="2dp" android:color="#f3f3f3"/>
		    
		    <size android:height="24dp" android:width="24dp" />
		</shape>
	</item>
</layer-list>