	<body class="fullscreen">
		<iframe id="__gwt_historyFrame" style="width:0;height:0;border:0"></iframe>
		<div style="width: 3000px; height: 3000px;"></div>
		<div id="loading_image" class="loading_image_outer" style="position: absolute; top: 50%; left: 50%; margin-left: -50px; margin-top: -50px; width: 100px; height: 100px; background-image: url(resources/images/loading_logo_outer.png); background-size: 100% 100%; opacity: 0.3;">
			<div class="loading_image_inner" style="width: 100%; height: 100%; background-image: url(resources/images/loading_logo_centre.png); background-size: 100% 100%;"></div>
		</div>
		<div id="loading_msg" style="position: absolute; top: 50%; left: 50%; margin-left: -100px; margin-top: 55px; width: 200px; height: 25px; line-height: 25px; color: #2b6229; font-size: 18px; font-weight: bold; text-align: center; opacity: 0.5;">
			<span>LOADING...</span>
		</div>
		<div id="alert_popup" class="alert_popup" style="visibility: hidden;">
			<div id="alert_popup_header">Web Console</div>
			<div id="alert_popup_msg">This is what an alert will look like!</div>
			<button onClick="window.hideAlert()" style="width: 80px; height: 40px;">OK</button>
		</div>
