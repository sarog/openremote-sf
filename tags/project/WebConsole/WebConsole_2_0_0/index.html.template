	    <style type="text/css">
	    	.fullscreen {
	    		background-color: #000;
	    	}
	    	
			.loading_image_outer {
				-webkit-animation: forward 1s linear infinite;
				-moz-animation: forward 1s linear infinite;
				-o-animation: forward 1s linear infinite;
			}
			
			.loading_image_inner {
				-webkit-animation: backward 1s linear infinite;
				-moz-animation: backward 1s linear infinite;
				-o-animation: backward 1s linear infinite;			
			}
			
			@-webkit-keyframes forward {
				from { -webkit-transform: rotate(0deg); }
				to { -webkit-transform: rotate(360deg); }
			}
			@-moz-keyframes forward {
				from { -moz-transform: rotate(0deg); }
				to { -moz-transform: rotate(360deg); }
			}
			@-o-keyframes forward {
				from { -o-transform: rotate(0deg); }
				to { -o-transform: rotate(360deg); }
			}
			
			@-webkit-keyframes backward {
				from { -webkit-transform: rotate(0deg); }
				to { -webkit-transform: rotate(-720deg); }
			}
			@-moz-keyframes backward {
				from { -moz-transform: rotate(0deg); }
				to { -moz-transform: rotate(-720deg); }
			}
			@-o-keyframes backward {
				from { -o-transform: rotate(0deg); }
				to { -o-transform: rotate(-720deg); }
			}
	    </style>
