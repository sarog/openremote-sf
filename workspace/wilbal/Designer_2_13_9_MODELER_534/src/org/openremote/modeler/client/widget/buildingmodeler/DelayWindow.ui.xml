<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

<ui:style>
    .widgetMargin {
        margin:10px;
      }

   </ui:style>
<g:FlowPanel width="200px" height="100px">
   <g:HorizontalPanel>
      <g:Label text="Delay(ms)" styleName="{style.widgetMargin}" />
      <g:TextBox ui:field="delayTextBox" visibleLength="15" styleName="{style.widgetMargin}"/>
   </g:HorizontalPanel>
   <g:HorizontalPanel>
      <g:Button ui:field="okButton" text="OK" styleName="{style.widgetMargin}"/>
   </g:HorizontalPanel>
</g:FlowPanel>
</ui:UiBinder>