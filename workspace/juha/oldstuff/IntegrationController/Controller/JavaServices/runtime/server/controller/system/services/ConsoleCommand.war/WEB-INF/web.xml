<web-app xmlns = "http://java.sun.com/xml/ns/javaee"
         xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd"
         version = "2.5">

  <display-name>OpenRemote Controller Console HTTP (REST) Command Interface</display-name>

  <listener>
    <listener-class>org.openremote.controller.console.HttpCommandStartup</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>REST Interface</servlet-name>
    <servlet-class>org.openremote.controller.console.HttpCommand</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>REST Interface</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

</web-app>
