<!--
 |  OpenWebNet protocol configuration for OpenRemote Designer.
 |
 |  Author: Marco Miccini
 +-->
<openremote xmlns = "http://www.openremote.org"
    xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation = "http://www.openremote.org protocol.xsd">

    <protocol displayName = "OpenWebNet" tagName = "openwebnet">

        <!--
         | Mandatory URL parameter for OpenWebNet protocol.
         +-->
        <attr name = "url" label = "URL">
            <validations>
                <allowBlank>false</allowBlank>
                <maxLength>4000</maxLength>
                <regex message = "Enter valid HTTP URL">.*</regex>
            </validations>
        </attr>

        <!--
         |  OWN command type sent to the OWN gateway
         +-->
        <attr name = "who" label = "OWN who" options="0,1,2,3,4,5,6,7,9,13,14,15,16,17,18,22,24,25,1000,1001,1004,1013" tooltipMessage="OpenWebNet command who sent." >
            <validations>
                <allowBlank>false</allowBlank>
            </validations>
        </attr>
        <attr name = "type" label = "OWN command type" options="Status Command,Status Request,Dimension Request,Dimension Write" tooltipMessage="OpenWebNet command type.">
            <validations>
                <allowBlank>false</allowBlank>
            </validations>
        </attr>
        <attr name = "what" label = "OWN what" tooltipMessage="OpenWebNet command what sent." >
            <validations>
                <allowBlank>true</allowBlank>
            </validations>
        </attr>
        <attr name = "where" label = "OWN where" tooltipMessage="OpenWebNet command where sent." >
            <validations>
                <allowBlank>true</allowBlank>
            </validations>
        </attr>
        <attr name = "dimension" label = "OWN dimension" tooltipMessage="OpenWebNet command dimension sent." >
            <validations>
                <allowBlank>true</allowBlank>
            </validations>
        </attr>
        <attr name = "values" label = "OWN values" tooltipMessage="OpenWebNet command values sent." >
            <validations>
                <allowBlank>true</allowBlank>
            </validations>
        </attr>

        <attr name="pollingInterval" label="Polling interval" tooltipMessage = "Polling interval in form of (1s, 1m, 1h) or just milliseconds for request command">
            <validations>
                <allowBlank>true</allowBlank>
                <regex message = "Enter valid polling interval">\d+[smh]?</regex>
            </validations>
        </attr>

        <attr name="timeout" label="Timeout" tooltipMessage = 'Timeout in form of "n x 250ms" for Dimension Request command'>
            <validations>
                <allowBlank>true</allowBlank>
                <regex message = "Enter valid timeout">\d+</regex>
            </validations>
        </attr>

        <attr name="sensorNamesList" label="Sensor names" tooltipMessage="Semicolon separated list of sensor names for Dimension Request command" >
            <validations>
                <allowBlank>true</allowBlank>
                <regex message = "Enter right sensor names, separated by semicolons">\w+(;\w+)*</regex>
            </validations>
        </attr>
        
    </protocol>

</openremote>