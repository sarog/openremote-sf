<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
	xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
  xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">

	<ui:with field='resources' type='org.openremote.modeler.client.icon.IconResources' />
		
	<g:FlowPanel>
    <toolbar:ToolBar>
      <button:TextButton ui:field="horizontalLeftAlignButton" icon="{resources.horizontalLeftAlignIcon}" toolTip="Horizontally align selection to left edge of first selected item" enabled="false"/>
      <button:TextButton ui:field="horizontalCenterAlignButton" icon="{resources.horizontalCenterAlignIcon}" toolTip="Horizontally align selection to center of first selected item" enabled="false"/>
      <button:TextButton ui:field="horizontalRightAlignButton" icon="{resources.horizontalRightAlignIcon}" toolTip="Horizontally align selection to right edge of first selected item" enabled="false"/>
      <button:TextButton ui:field="verticalTopAlignButton" icon="{resources.verticalTopAlignIcon}" toolTip="Vertically align selection to top edge of first selected item" enabled="false"/>
      <button:TextButton ui:field="verticalCenterAlignButton" icon="{resources.verticalCenterAlignIcon}" toolTip="Vertically align selection to center of first selected item" enabled="false"/>
      <button:TextButton ui:field="verticalBottomAlignButton" icon="{resources.verticalBottomAlignIcon}" toolTip="Vertically align selection to bottom edge of first selected item" enabled="false"/>
      <toolbar:SeparatorToolItem/>
      <button:TextButton ui:field="sameSizeButton" icon="{resources.sameSizeIcon}" toolTip="Resize selection to size of first selected item" enabled="false"/>
      <toolbar:SeparatorToolItem/>
      <button:TextButton ui:field="horizontalSpreadButton" icon="{resources.horizontalSpreadIcon}" toolTip="Spread selection horizontally to have even space between all items" enabled="false"/>
      <button:TextButton ui:field="verticalSpreadButton" icon="{resources.verticalSpreadIcon}" toolTip="Spread selection vertically to have even space between all items" enabled="false"/>
      <toolbar:SeparatorToolItem/>
      <button:TextButton ui:field="horizontalCenterButton" icon="{resources.horizontalCenterIcon}" toolTip="Center selection horizontally within the screen" enabled="false"/>
      <button:TextButton ui:field="verticalCenterButton" icon="{resources.verticalCenterIcon}" toolTip="Center selection vertically within the screen" enabled="false"/>
      <toolbar:FillToolItem/>
    </toolbar:ToolBar>
	</g:FlowPanel> 
</ui:UiBinder> 