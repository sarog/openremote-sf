<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
	<ui:style>
		.errorMessageStyle {
			color: red;
			text-align: center;
			width: 100%;
		}
	</ui:style>

	<g:DialogBox autoHide="false" modal="true">
		<g:caption>
			<b>Lutron HomeWorks import</b>
		</g:caption>
		<g:FormPanel ui:field="uploadForm">
			<g:DockLayoutPanel unit="EM" ui:field="mainLayout">
				<g:north size="2">
					<g:Label styleName='{style.errorMessageStyle}' ui:field='errorMessageLabel' />
				</g:north>
				<g:south size="4">
					<g:HorizontalPanel width="100%" height="100%">
						<g:cell horizontalAlignment="ALIGN_CENTER">
							<g:Button ui:field="cancelButton" width="6em">Cancel</g:Button>
						</g:cell>
						<g:cell horizontalAlignment="ALIGN_CENTER">
							<g:Button ui:field="importButton" width="6em">Import</g:Button>
						</g:cell>
					</g:HorizontalPanel>
				</g:south>
				<g:center>
					<g:FlowPanel width="100%">
						<g:HorizontalPanel>
							<g:FileUpload ui:field="uploadField" name="file" />
							<g:SubmitButton ui:field="submitButton">Load</g:SubmitButton>
						</g:HorizontalPanel>
						<g:ScrollPanel>
							<c:CellTable width='100%' ui:field='table' />
						</g:ScrollPanel>
					</g:FlowPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:FormPanel>
	</g:DialogBox>
</ui:UiBinder> 