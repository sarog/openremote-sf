<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:tag="@string/settings">

	<ScrollView android:id="@+id/settingsScrollView"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1">
		<LinearLayout android:id="@+id/appSettingsView"
		              android:layout_width="fill_parent"
		              android:layout_height="fill_parent"
		              android:orientation="vertical">
			<RelativeLayout android:id="@+id/autoLayout"
			                android:paddingLeft="10dp"
			                android:paddingTop="5dp"
			                android:paddingRight="10dp"
			                android:paddingBottom="10dp"
			                android:layout_width="fill_parent"
			                android:layout_height="80dp">
				<TextView android:text="Auto Discovery"
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:layout_alignParentLeft="true"
				          android:layout_centerVertical="true" />
				
				<ToggleButton android:id="@+id/autoButton"
				              android:layout_width="wrap_content"
				              android:layout_height="wrap_content"
				              android:layout_alignParentRight="true"
				              android:layout_centerVertical="true" />
				              				
				<ToggleButton android:id="@+id/auto2Button"
				              android:layout_width="wrap_content"
				              android:layout_height="wrap_content"
				              android:layout_centerHorizontal="true"
				              android:layout_centerVertical="true" />
				
				<TextView android:text="Turn off auto-discovery to input controller URL manually."
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:layout_alignParentBottom="true"
				          android:layout_alignParentLeft="true"
				          android:textSize="10sp"
				/>
			</RelativeLayout>
			
			<include layout="@layout/choose_controller_bar" />
			
			<FrameLayout android:id="@+id/controller_selection_frame_layout"
			             android:layout_width="fill_parent"
			             android:layout_height="280dp">
				<ListView android:id="@+id/auto_servers_list_view"
				          android:layout_width="fill_parent"
				          android:layout_height="fill_parent"
				          android:paddingLeft="20dp"
				          android:paddingTop="5dp"
				          android:paddingRight="5dp"
				          android:paddingBottom="10dp"
				          android:background="#000000"
				          android:cacheColorHint="#000000"
				          android:choiceMode="singleChoice">
				</ListView>
				
				<!-- do we really want height to wrap content here? -->
				<!-- custumeView -->
				<LinearLayout android:id="@+id/custom_servers_layout"
				              android:orientation="vertical"
				              android:paddingLeft="20dp"
				              android:paddingTop="5dp"
				              android:paddingRight="5dp"
				              android:paddingBottom="0dp"
				              android:layout_width="fill_parent"
				              android:layout_height="wrap_content"
				              android:visibility="invisible">
					
					<ListView android:id="@+id/custom_server_list_view"
					          android:layout_width="fill_parent"
					          android:layout_height="80dp"
					          android:cacheColorHint="#000000"
					          android:choiceMode="singleChoice" />
					
					<RelativeLayout android:layout_width="fill_parent"
					                android:layout_height="80dp">
						<Button android:id="@+id/add_server_button"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerHorizontal="true"
						        android:text="Add" />
						
						<Button android:id="@+id/delete_server_button"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_alignParentRight="true"
						        android:text="Delete" />
					</RelativeLayout>
				</LinearLayout>
			</FrameLayout>
			
			<TextView android:text="Choose Panel Identity:"
					  android:background="@color/dark_gray"
					  android:paddingLeft="10dp"
					  android:paddingTop="5dp"
					  android:paddingRight="0dp"
					  android:paddingBottom="5dp"
					  android:layout_width="fill_parent"
					  android:layout_height="wrap_content" />
			
			<org.openremote.android.console.view.PanelSelectSpinnerView
			    android:id="@+id/panel_select_spinner_view"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content" />
			    
			
						<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
					<Button android:id="@+id/clear_image_cache_button" android:text="Clear Image Cache" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
						</RelativeLayout>
			
		</LinearLayout>
	</ScrollView>
	<include layout="@layout/security_button_bar" />
	<include layout="@layout/bottom_button_bar" />
</LinearLayout>