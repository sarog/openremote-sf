<!--
  Music Player Daemon protocol

  Author: Marcus Redeker
-->
<openremote xmlns = "http://www.openremote.org" 
            xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
	    xsi:schemaLocation = "http://www.openremote.org protocol.xsd">

  <protocol displayName="MPD Protocol" tagName="mpd">

    <attr name="ipAddress" label="IPAddress" tooltipMessage="IP address of the machine where MPD is running">
      <validations>
        <allowBlank>false</allowBlank>
      </validations>
    </attr>

    <attr name="port" label="Port" tooltipMessage="Port to connect to MPD instance">
      <validations>
        <allowBlank>false</allowBlank>
      </validations>
    </attr>

    <attr name="command" label="MPD Command" tooltipMessage = "A MPD command as defined in MpdCmdEnum">
      <validations>
        <allowBlank>false</allowBlank>
      </validations>
    </attr>

  </protocol>
</openremote>
